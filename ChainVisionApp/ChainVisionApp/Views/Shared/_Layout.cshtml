<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chain Vision</title>
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChainVisionApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="content">
        <nav class="col-md-3 col-lg-2 d-md-block sidebar">
            <div class="greeter">
                <i class="fa-solid fa-user"></i>
                <p>Welcome, User</p>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i>&emsp;Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Products">
                        <i class="fa-solid fa-bread-slice"></i>&emsp;Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="News">
                        <i class="fa-solid fa-newspaper"></i>&emsp;News
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">
                        <i class="fa-solid fa-address-book"></i>&emsp;Contact
                    </a>
                </li>
            </ul>
            <p class="powered">© Powered by FGF Brands 2024</p>
        </nav>
        <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4 body-content">
            <div class="pb-3">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    body {
        margin-bottom: 0;
        background-color: #7ac142;
        overflow-x: hidden;
        font-family: "Poppins", sans-serif;
    }
    .content {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        position: fixed;
        top: 0;
        height: 100vh;
        color: white;
        width: 300px;
        overflow-y: auto;
    }

    .body-content {
        background-color: white;
        border-radius: 25px;
        margin: 10px 10px 10px 300px !important;
        padding: 1rem;
        height: calc(100vh - 20px);
        width: 77.5%;
        overflow-y: auto;
    }

    .logo{
        width: 50px;
    }
    .greeter {
        color: #e8e8e8;
        text-align: center;
        font-weight: 500;
        padding: 4rem 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .greeter i{
        font-size: 2.5rem;
    }
    .greeter p{
        font-size: 1.6rem;
        margin-top: 2rem;
    }

    .sidebar .nav-link {
        color: #e8e8e8;
        padding: 1rem 2rem;
        font-weight: 400;
    }

    .sidebar .nav-link:hover {
        background-color: #588f2c;
        color: #fff;
    }
    .powered {
        position: absolute;
        bottom: 0;
        font-size: 0.9rem;
        color: #3f6620;
        padding-left: 1.5rem;
    }

    ::-webkit-scrollbar {
        width: 5px;
        max-height: 80%;
    }

    ::-webkit-scrollbar-thumb {
        background: #517038;
        border-radius: 25px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: #334a21;
    }
</style>
