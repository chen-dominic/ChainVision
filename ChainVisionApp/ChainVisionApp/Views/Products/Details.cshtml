        font-size: 0.8rem;
        font-style: italic;
    }

    .news-box {
        border: 1px solid black;
        padding: 1rem;
        border-radius: 15px;
        width: 100%;
    }

    .prod-table {
        transition: all .2s ease-in-out;
        width: 100%;
    }

        .prod-table thead {
            font-size: 0.8rem;
            font-weight: 600;
            background-color: #7ac142;
            color: white;
        }

        .prod-table tbody {
            font-size: 0.8rem;
            font-weight: 400;
        }

            .prod-table tbody tr {
                transition: all 0.1s linear;
            }

                .prod-table tbody tr.hidden {
                    display: none;
                }

                .prod-table tbody tr:hover {
                    background-color: #dddedc;
                }

    .icon {
        font-size: 1.5rem;
        cursor: pointer;
    }

        .icon:hover {
            filter: grayscale(0.3);
        }

    .fa-up-right-from-square {
        color: #2b3952;
    }

    .fa-user-gear {
        color: #b89523;
    }

    .button-container {
        text-align: center;
        margin-top: 10px;
    }

    .btn {
        padding: 10px 20px;
        background-color: #7ac142;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #588f2c;
            color: white;
        }

    .modal-content{
        max-width: 40vw;
        font-size: 0.8rem;
    }

    .sorting-links {
        margin-bottom: 15px;
    }

        .sorting-links .btn {
            margin-right: 10px;
            padding: 8px 15px;
            background-color: #7ac142;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }

        .sorting-links .btn:hover {
            background-color: #588f2c;
        }

            .sorting-links .btn.active {
                background-color: #588f2c; /* Green color */
                color: #f0f0f0;
            }

</style>
